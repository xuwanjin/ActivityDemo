<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xuwanjin.activitydemo.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/start_activity_explicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_activity_explicit" />

        <Button
            android:id="@+id/start_activity_implicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_activity_implicit"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_activity_from_background"
            android:text="@string/start_activity_from_background"

            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
